@model MottoUI.EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Mesaj Detay Sayfası</h1>

    @Html.Label("Mesaj ID")
    @Html.TextBoxFor(model => model.MessageId, new { @class = "form-control" })
    <br />
    @Html.Label("Mesaj Başlığı")
    @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
    <br />
    @Html.Label("Mesaj İçeriği")
    @Html.TextAreaFor(model => model.MessageDetails,20,3, new { @class = "form-control", @disabled = "disabled" })
    <br />
    
    <button class="btn btn-success"> Mesajlara Dön </button>